<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/tvPlanName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Plan name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvPlanWeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Weight"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tvPlanHeight" />

        <TextView
            android:id="@+id/tvPlanHeight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Height"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPlanWeight"
            app:layout_constraintBottom_toTopOf="@+id/tvPlanAge" />

        <TextView
            android:id="@+id/tvPlanAge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Age"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPlanHeight"
            app:layout_constraintBottom_toTopOf="@+id/tvPlanGender" />

        <TextView
            android:id="@+id/tvPlanGender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Gender"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPlanAge"
            app:layout_constraintBottom_toTopOf="@+id/tvPlanBaseCaloricNeed" />

        <TextView
            android:id="@+id/tvPlanBaseCaloricNeed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Base caloric need"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvPlanGender"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>