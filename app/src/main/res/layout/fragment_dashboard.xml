<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.calcontrol.app.ui.navigation.navigationfragments.dashboard.DashboardFragment"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvCaloricDeficitOrSurplus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="You are -200 kcal in caloric DEFICIT" />

    <TextView
        android:id="@+id/tvCaloriesInLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Calories in"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCaloricDeficitOrSurplus" />

    <ImageView
        android:id="@+id/ivResetCaloriesIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_reset"
        app:layout_constraintBottom_toBottomOf="@+id/tvCaloriesIn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvCaloriesIn" />

    <TextView
        android:id="@+id/tvCaloriesIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:textSize="32sp"
        app:layout_constraintStart_toEndOf="@+id/ivResetCaloriesIn"
        app:layout_constraintTop_toBottomOf="@+id/tvCaloriesInLabel"
        tools:text="1900" />

    <TextView
        android:id="@+id/tvCaloriesOutLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Calories burned"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCaloricDeficitOrSurplus" />

    <TextView
        android:id="@+id/tvCaloriesOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:textSize="32sp"
        app:layout_constraintEnd_toStartOf="@+id/ivResetCaloriesOut"
        app:layout_constraintTop_toBottomOf="@+id/tvCaloriesOutLabel"
        tools:text="2000" />

    <ImageView
        android:id="@+id/ivResetCaloriesOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_reset"
        app:layout_constraintBottom_toBottomOf="@+id/tvCaloriesOut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvCaloriesOut" />

    <Button
        android:id="@+id/btnAddCaloriesIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="ADD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCaloriesIn" />

    <Button
        android:id="@+id/btnAddCaloriesOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="ADD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCaloriesOut" />
</androidx.constraintlayout.widget.ConstraintLayout>